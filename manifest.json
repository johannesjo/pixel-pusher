{
  "manifest_version": 3,
  "name": "Pixel Pusher",
  "version": "1.0.0",
  "description": "Display images as semi-transparent overlays in Chrome DevTools",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}